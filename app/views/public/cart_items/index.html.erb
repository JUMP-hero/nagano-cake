<h1>ショッピングカート</h1>

<div>
   <%= link_to "カートを空にする", cart_items_all_path, method: :delete %>
</div>

<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= (cart_item.item.price * 1.1).floor %></td>
          <td>
            <%= form_with model: cart_item, url: update_cart_item_path(cart_item), method: :patch do |f| %>
              <%= f.select :quantity, *[1..5] %>
              <%= f.submit "更新", class: "" %>
            <% end %>
          </td>

          <td><%= (cart_item.item.price * 1.1).floor * cart_item.quantity %></td>
          <td>
            <% if cart_item.customer == current_customer %>
            <%= link_to "削除", destroy_cart_item_path(cart_item), method: :delete %>
            <% end %>
          </td>
          <% @total +=  (cart_item.item.price * 1.1).floor * cart_item.quantity %>
      </tr>
  <% end %>
  </tbody>
</table>

<div>
  合計金額
  <%= @total %>
</div>

<div>
  <%= link_to "買い物を続ける", root_path %>
</div>
