<div class="container my-5">
  <div class="row">
    <div class="col-7 m-auto">
      <h3>配送先登録/一覧</h3>

      <%= form_with model: @address, url: addresses_path do |f| %>
        <div>
          <div>
            <%= f.label :郵便番号, class: 'form-label' %>
            <%= f.text_field :post_code, placeholder: '0000-0000', class: 'form-control mb-1' %>
          </div>
          <div>
            <%= f.label :住所, class: 'form-label' %>
            <%= f.text_field :address, placeholder: '埼玉県所沢市日吉町', class: 'form-control mb-1' %>
          </div>
          <div>
            <%= f.label :宛名, class: 'form-label' %>
            <%= f.text_field :customer_name, placeholder: '所沢太郎', class: 'form-control mb-1' %>
          </div>
            <%= f.submit "新規登録", class: 'btn btn-sm btn-success mt-2' %>
        </div>
      <% end %>

      <!--配送先一覧-->
      <table class='table mt-4'>
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.customer_name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), method: :get, class: 'btn btn-sm btn-primary' %>
              <%= link_to "削除する", address_path(address), method: :delete, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>