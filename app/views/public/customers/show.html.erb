<div class="container">
  <div class="row mt-4">
    <div class="col-lg-8 mb-4">
      <h3><strong>マイページ</strong></h3>
    </div>
  </div>

  <div class="row">
    <div class = "col-lg-8 mb-4">
      <strong>登録情報</strong>
      <%= link_to '編集する', customers_edit_path, class: "btn btn-success ml-5" %>
    </div>
  </div>

  <div class="row">
    <div class = "col-lg-8 mb-4">
      <table class="table table-bordered">
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class = "col-lg-8 mb-4">
        <p>
          <strong>配送先</strong>
          <%= link_to '一覧を見る', addresses_path, class: "btn btn-success ml-5" %>
        </p>
        <p>
          <strong>注文履歴</strong>
          <%= link_to '一覧を見る', orders_path, class: "btn btn-success ml-5" %>
        </p>
    </div>
  </div>
</div>