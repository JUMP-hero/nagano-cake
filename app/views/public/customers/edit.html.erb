<h2>会員情報編集</h2>

<%= form_with(model: @customer, url:admin_customer_path, local: true, method: :patch) do |f| %>

<div class="form-group">
  <label>氏名</label>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %>
</div>

<div class="form-group">
  <label>フリガナ</label>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>
</div>

<div class="form-group">
  <label>郵便番号</label>
  <%= f.text_field :post_code %>
</div>

<div class="form-group">
  <label>住所</label>
  <%= f.text_field :address %>
</div>

<div class="form-group">
  <label>電話番号</label>
  <%= f.text_field :phone_number %>
</div>

<div class="form-group">
  <label>メールアドレス</label>
  <%= f.text_field :email %>
</div>


<div class="form-group">
  <%= f.submit "編集内容を保存", class: "btn btn-secondary" %>
</div>

<%= link_to '退会する', unsubscribe_path, class: "btn btn-sm btn-block" %>

<% end %>
