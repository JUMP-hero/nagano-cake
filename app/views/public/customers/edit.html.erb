<div class="container">
  <div class="row mt-4">
    <div class="col-10 m-auto">
      <div class="headline">
        <h2 class="title_h2">会員情報編集</h2>
      </div>

      <%= form_with(model: @customer, url:customers_path, local: true, method: :patch) do |f| %>
      <table class="table-box">
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>

      <div class="actions">
        <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>
        <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-sm btn-block" %>
      </div>
      <% end %>

    </div>
  </div>
</div>