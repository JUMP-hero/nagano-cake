<div class="container my-5">
  <div class="row">
    <div class="col">
      <h3>注文情報</h3>
        <table class="table">
          <tr>
            <th>注文日</th>
            <td><%= 'today' %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.order_status_i18n %></td>
          </tr>
        </table>
    </div>
    <div class="col">
      <h3>請求情報</h3>
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_amount.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= (@order.postage + @order.total_amount).to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-8">
      <h3>注文内容</h3>
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= (order_item .price*1.1).floor %>円</td>
              <td><%= order_item.count %></td>
              <td><%= (order_item.price * 1.1 * order_item.count).floor.to_s(:delimited) %>円</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>