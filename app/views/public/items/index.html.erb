<!--会員側の商品一覧-->
<div class="container">

    <div class="row"></div>
    <div class="col-9">
        <h1>商品一覧</h1><p class="mt-auto">（全<%= @items.count %>件）</p>
      </div>
      <div class="d-flex justify-content-center">
        <% @items.each do |item| %>
        <div class="ml-2">
          <div>
            <%= link_to item_path(item) do %>
              <%= image_tag item.item_image, size: "200x150" %>
            <% end %>
          </div>
          <div><%= item.name %></div>
          <div><%= item.price.to_s(:delimited) %>円</div>
        </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>