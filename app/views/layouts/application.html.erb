<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul  class="nav navbar-nav navbar-right">
          <% if customer_signed_in? %>

            <li>
              <%= link_to "マイページ", customers_path(current_customer), class: "btn" %>
            </li>
            <li>
              <%= link_to "商品一覧", items_path, class: "btn" %>
            </li>
            <!--<li>-->
            <!--  <#%= link_to "カート", _path, class: "btn" %>-->
            <!--</li>-->
            <li>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :get, class: "btn" %>
            </li>

          <% elsif admin_signed_in? %>

            <li>
              <%= link_to "商品一覧", admin_items_path, class: "btn" %>
            </li>
            <li>
              <%= link_to "会員一覧", admin_customers_path, class: "btn" %>
            </li>
            <li>
              <%= link_to "注文履歴一覧", admin_path, class: "btn" %>
            </li>
            <li>
              <%= link_to "ジャンル一覧", admin_genres_path, class: "btn" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :get %>
            </li>

          <% else %>

            <li>
              <%= link_to "商品一覧", items_path, class: "btn" %>
            </li>
            <li>
              <%= link_to "新規登録", new_customer_registration_path, class: "btn" %>
            </li>
            <li>
              <%= link_to "商品一覧", new_customer_session_path, class: "btn" %>
            </li>

          <% end %>

        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
