<div class="container">
  <div class="row mt-4">
    <div class="col-lg-8 mb-4">
      <h3><strong>ジャンル一覧・追加</strong></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 mb-4">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <table class="table-box">
        <tr>
          <th>ジャンル名</th>
          <td><%= f.text_field :name, class: "ml-4" %></td>
          <td><%= f.submit '新規登録', class: "btn btn-sm btn-success ml-4" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 mb-4">
      <table class="table">
        <thead>
          <tr class="info">
            <th>ジャンル一覧</th>
            <th></th>
          </tr>
        </thead>

        <body>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
          </tr>
          <% end %>
        </body>
      </table>
    </div>
  </div>
</div>