<h1>注文詳細</h1>

<h4>購入者</h4>
  <p><%= @order.customer.last_name + @order.customer.first_name %></p>

<h4>注文日</h4>
  <p><%= @order.created_at %></p>

<h4>配送先</h4>
  <p><%= @order.post_code + @order.address %><%= @order.address_name %></p>

<h4>支払方法</h4>
  <P><%= @order.payment_method %></P>

<h4>注文ステータス</h4>
   <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
     <%= f.select :order_status, Order.response_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
     <%= f.submit "変更" %>
   <% end %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込み)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @order.order_items.each do |order| %>
    <tr>
      <td><%= order.items.name %></td>
      <td><%= (order.price * 1.1).floor %></td>
      <td><%= order.quantity %></td>
      <td><%= (order.price * 1.1).floor * order.order_items.quantit %></td>
      <% @total += (order.order_item.price * 1.1).floor * order.order_items.quantit %>
      <td>

      </td>
    </tr>
  </tbody>


</table>


<h4>商品合計</h4>
<div><%= @total %>円</div>
<h4>送料</h4>
<div><%= @order.postage %>円</div>
<h4>請求金額合計</h4>