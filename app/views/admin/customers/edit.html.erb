<div class="container">
  <div class="row mt-4">
    <div class="col-10 m-auto">
      <div class="headline">
        <h2 class="title_h2"><% @customer.last_name %><% @customer.first_name %>さんの会員情報編集</h2>
      </div>

        <%= form_with(model: @customer, url: admin_customer_path, local: true, method: :patch) do |f| %>
        <table class="table-box">
          <tr>
            <th>会員ID</th>
            <td><%= f.label :"#{@customer.id}" %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :post_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label :is_deleted, "退会" %>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label :is_deleted, "有効" %>
            </td>
          </tr>
        </table>

          <div class="form-group">
            <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
          </div>
        <% end %>

    </div>
  </div>
</div>