<div class="container">
  <div class="row mt-4">
    <div class="col-lg-8 mb-4">
      <h3><strong><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</strong></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 mb-4">
      <%= form_with(model: @customer, url: admin_customer_path, local: true, method: :patch) do |f| %>
        <table class="table-box">
          <tr>
            <th>会員ID</th>
            <td><%= f.label :"#{@customer.id}", class: "ml-2" %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name, class: "ml-2" %><%= f.text_field :first_name, class: "ml-2" %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana, class: "ml-2" %><%= f.text_field :first_name_kana, class: "ml-2" %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :post_code, class: "ml-2" %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, class: "ml-2" %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :phone_number, class: "ml-2" %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email, class: "ml-2" %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_deleted, :true, class: "ml-2" %>
              <%= f.label :is_deleted, "退会" %>
              <%= f.radio_button :is_deleted, :false, class: "ml-2" %>
              <%= f.label :is_deleted, "有効" %>
            </td>
          </tr>
        </table>
    </div>
  </div>

      <div class="row">
        <div class="col-lg-8 mb-4">
          <%= f.submit "変更を保存", class: "btn btn-success col-sm-3" %>
        </div>
      </div>
      <% end %>
</div>