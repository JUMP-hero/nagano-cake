<h2><% @customer.last_name %><% @customer.first_name %>さんの会員情報編集</h2>

<%= form_with(model: @customer, url: admin_customer_path, local: true, method: :patch) do |f| %>

<div class="form-group">
  <label>会員ID</label>
  <%= f.label :"#{@customer.id}" %>
</div>

<div class="form-group">
  <label>氏名</label>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %>
</div>

<div class="form-group">
  <label>フリガナ</label>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>
</div>

<div class="form-group">
  <label>郵便番号</label>
  <%= f.text_field :post_code %>
</div>

<div class="form-group">
  <label>住所</label>
  <%= f.text_field :address %>
</div>

<div class="form-group">
  <label>電話番号</label>
  <%= f.text_field :phone_number %>
</div>

<div class="form-group">
  <label>メールアドレス</label>
  <%= f.text_field :email %>
</div>

<div class="form-group">
  <label>会員ステータス</label>
  <%= f.text_field : %>
</div>

<div class="form-group">
  <%= f.radio_button :is_deleted, true %>
  <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
  <%= f.radio_button :is_deleted, false %>
  <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
</div>

<div class="form-group">
  <%= f.submit "変更を保存", class: "btn btn-secondary" %>
</div>

<% end %>

